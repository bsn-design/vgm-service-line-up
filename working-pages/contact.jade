//- Variables for includes
basePath = "/vgm-service-line-up"
pageTitle = "Contact | Service Line Up"
contactClasses = "current"

doctype 5
html(lang='en')
  include _head
  body
    include _header
    section.guide-main.container
      section.hero.guide-section
        h1.hero-title Contact Us
        p.hero-text Drop us a line or give us a call. We&rsquo;d love to chat.
      section.guide-section
        form
          .input-group
            label.label(for="name") Name<span class="required">*</span>
            input.input(name="name", type="text", placeholder="Your name", id="name" required)
          .input-group
            label.label(for="email") Email<span class="required">*</span>
            input.input(name="email", type="email", placeholder="Your email", id="email" required)
          .input-group
            label.label(for="phone") Phone Number
            input.input(name="phone", type="tel", placeholder="Your number", id="phone")
          .input-group
            label.label(for="message") Message<span class="required">*</span>
            textarea.textarea(name="message", placeholder="Message", rows="8" required)
          .center
            button.btn-primary.icon-send Send        
      section.guide-section.phone.center
        i.icon-phone.phone-icon
        h3.phone-number 888-888-8888
    include _footer